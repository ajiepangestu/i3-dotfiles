# [Default MOD Button]
set $mod Mod4

# [Default Terminal]
set $terminal urxvt -e

# [Window Configuration]
for_window [class=".*"] border pixel 2

# [Font]
font pango:Hack 8

# [Window Configuration] [Android emulator]
for_window [title="Android Emulator - Pixel_API*"] floating enable
# assign [title="Android Emulator - Pixel_API*"] 5

# [Themes]
# class                 border  bground text    indicator child_border
client.focused          #4C4C4C #EECB5A #FFFFFF #EECB5A   #EECB5A
client.focused_inactive #4C4C4C #4C4C4C #FFFFFF #4C4C4C   #4C4C4C
